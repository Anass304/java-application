pipeline {
    agent any
    tools{
    maven 'maven 3.9.2'

    stages {
        stage('Git checkout') {
            steps {
               scripts{
                   git branch: 'main', credentialsId: 'Github-credentials1', url: 'https://github.com/Anass304/java-application'
               }
            }
        }
             stage('Unit testing') {
                 steps{
                     script{
                         sh 'mvn test'
                     }
                 }
             }
            stage('Integration testing') {
                steps{
                    script{
                        sh 'mvn verify -DskipUnitTests'
                    }
                }
            }
                stage('Maven Build'){
                    steps{
                        script{
                            sh 'mvn clean install'
                        }
                    }
                }
                 }
            
               }

}
